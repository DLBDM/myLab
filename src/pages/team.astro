            padding-bottom: 20px;
            text-align: center;  /* 内容靠左对齐 */
        }
        .details {
    color: #666666; /* 段落文字颜色 */
    font-size: 16px; /* 段落文字大小 */
    margin-bottom: 10px; /* 段落之间的间距 */
    padding-bottom: 20px;
    
    /* 默认情况下显示全部文本 */
    display: block;
}

/* 移动设备（例如，屏幕宽度小于或等于768px）上应用省略号效果 */
@media (max-width: 1200px) {
    .details {
        display: -webkit-box; /* 使用弹性盒模型 */
        -webkit-line-clamp: 3; /* 显示3行文本 */
        -webkit-box-orient: vertical; /* 垂直排列 */
        overflow: hidden; /* 隐藏超出部分 */
        margin-bottom: 30px;
        /* 可选：为省略号添加渐变遮罩效果 */
        position: relative;
    }
    
    /* 可选：添加渐变遮罩以增强视觉效果 */
    @media (max-width: 768px) {
        .details::after {
            content: '';
            text-align: right;
            position: absolute;
            bottom: 0;
            right: 0;
            width: 100%;
            height: 1.2em; /* 与行高匹配 */
            background: linear-gradient(to top, white, rgba(255, 255, 255, 0));
        }
    }
}


